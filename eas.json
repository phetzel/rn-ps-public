{
  "cli": {
    "version": ">= 16.1.0",
    "appVersionSource": "remote"
  },
  "build": {
    "base": {
      "node": "20.18.0"
    },
    "development": {
      "extends": "base",
      "developmentClient": true,
      "distribution": "internal",
      "channel": "development",
      "env": {
        "APP_ENV": "development"
      },
      "ios": {
        "resourceClass": "m-medium"
      }
    },
    "preview": {
      "extends": "base",
      "distribution": "internal",
      "channel": "preview",
      "env": {
        "APP_ENV": "preview"
      },
      "ios": {
        "resourceClass": "m-medium"
      }
    },
    "production": {
      "extends": "base",
      "autoIncrement": true,
      "channel": "production",
      "env": {
        "APP_ENV": "production",
        "ADMOB_ANDROID_APP_ID": "$ADMOB_ANDROID_APP_ID",
        "ADMOB_IOS_APP_ID": "$ADMOB_IOS_APP_ID",
        "ADMOB_IOS_REWARD_RELATIONSHIP_ID": "$ADMOB_IOS_REWARD_RELATIONSHIP_ID",
        "ADMOB_IOS_REWARD_APPROVAL_ID": "$ADMOB_IOS_REWARD_APPROVAL_ID",
        "ADMOB_ANDROID_REWARD_RELATIONSHIP_ID": "$ADMOB_ANDROID_REWARD_RELATIONSHIP_ID",
        "ADMOB_ANDROID_REWARD_APPROVAL_ID": "$ADMOB_ANDROID_REWARD_APPROVAL_ID"
      },
      "ios": {
        "resourceClass": "m-medium"
      }
    },
    "test": {
      "extends": "base",
      "withoutCredentials": true,
      "distribution": "internal",
      "channel": "test",
      "env": {
        "APP_ENV": "test"
      },
      "ios": {
        "simulator": true,
        "resourceClass": "m-medium"
      },
      "android": {
        "buildType": "apk"
      }
    }
  },
  "submit": {
    "production": {
      "ios": {
        "ascAppId": "YOUR_ASC_APP_ID",
        "appleTeamId": "YOUR_TEAM_ID"
      },
      "android": {
        "track": "internal",
        "releaseStatus": "draft"
      }
    }
  }
}
