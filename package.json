{
  "name": "press-office",
  "main": "index.js",
  "version": "1.0.0",
  "scripts": {
    "dev": "expo start -c",
    "dev:web": "expo start -c --web",
    "dev:android": "expo start -c --android",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "android": "expo start -c --android",
    "ios": "expo start -c --ios",
    "web": "expo start -c --web",
    "clean": "rm -rf .expo node_modules",
    "postinstall": "npx tailwindcss -i ./global.css -o ./node_modules/.cache/nativewind/global.css",
    "prepare": "husky",
    "dev:client": "expo start --dev-client -c",
    "build:dev:ios": "eas build --profile development --platform ios",
    "build:preview:ios": "eas build --profile preview --platform ios",
    "build:prod:ios": "eas build --profile production --platform ios",
    "build:dev:android": "eas build --profile development --platform android",
    "build:preview:android": "eas build --profile preview --platform android",
    "build:prod:android": "eas build --profile production --platform android",
    "test": "jest",
    "test:ci": "jest --watchAll=false --passWithNoTests",
    "typecheck": "tsc --noEmit",
    "gen-situation": "tsx scripts/run-gen-situation.ts",
    "e2e": "maestro test --debug-output ./maestro-debug e2e/maestro/flows/*.yaml",
    "e2e:ios": "maestro test --platform=ios e2e/maestro/suites/smoke.yaml",
    "e2e:android": "maestro test --platform=android e2e/maestro/suites/smoke.yaml",
    "e2e:studio": "maestro studio",
    "e2e:record": "maestro record",
    "e2e:flow": "maestro test",
    "maestro:install": "curl -Ls 'https://get.maestro.mobile.dev' | bash && echo 'Add $HOME/.maestro/bin to your PATH'",
    "build:test:ios": "eas build --profile test --platform ios",
    "build:test:android": "eas build --profile test --platform android",
    "build:test:local:ios": "eas build --profile test --platform ios --local",
    "build:test:local:android": "eas build --profile test --platform android --local",
    "docs:start": "npm --prefix docs-site start",
    "docs:build": "npm --prefix docs-site run build"
  },
  "dependencies": {
    "@amplitude/analytics-react-native": "^1.5.16",
    "@amplitude/plugin-session-replay-react-native": "^0.4.3",
    "@faker-js/faker": "^9.7.0",
    "@gorhom/bottom-sheet": "^4.6.4",
    "@hookform/resolvers": "5.2.2",
    "@nozbe/simdjson": "^3.9.4",
    "@nozbe/sqlite": "^3.46.0",
    "@nozbe/watermelondb": "^0.27.1",
    "@react-native-async-storage/async-storage": "2.2.0",
    "@react-navigation/native": "^7.0.0",
    "@rn-primitives/accordion": "^1.2.0",
    "@rn-primitives/alert-dialog": "^1.1.0",
    "@rn-primitives/avatar": "^1.2.0",
    "@rn-primitives/label": "^1.2.0",
    "@rn-primitives/portal": "~1.3.0",
    "@rn-primitives/progress": "^1.2.0",
    "@rn-primitives/radio-group": "^1.1.0",
    "@rn-primitives/select": "^1.2.0",
    "@rn-primitives/separator": "^1.2.0",
    "@rn-primitives/slot": "^1.2.0",
    "@rn-primitives/table": "^1.1.0",
    "@rn-primitives/tabs": "^1.2.0",
    "@rn-primitives/tooltip": "^1.2.0",
    "@rn-primitives/types": "~1.1.0",
    "@sentry/react-native": "~7.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "expo": "^54.0.0",
    "expo-application": "~7.0.7",
    "expo-build-properties": "~1.0.9",
    "expo-constants": "~18.0.9",
    "expo-dev-client": "~6.0.16",
    "expo-device": "~8.0.9",
    "expo-linking": "~8.0.8",
    "expo-navigation-bar": "~5.0.9",
    "expo-router": "~6.0.10",
    "expo-splash-screen": "~31.0.10",
    "expo-status-bar": "~3.0.8",
    "expo-system-ui": "~6.0.7",
    "expo-tracking-transparency": "~6.0.7",
    "lucide-react-native": "^0.545.0",
    "nativewind": "^4.2.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "7.65.0",
    "react-native": "0.81.5",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-google-mobile-ads": "^15.4.0",
    "react-native-reanimated": "~4.1.1",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-svg": "15.12.1",
    "react-native-web": "^0.21.0",
    "react-native-worklets": "0.5.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.14",
    "tailwindcss-animate": "^1.0.7",
    "zod": "3.25.76",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/plugin-proposal-decorators": "^7.25.9",
    "@testing-library/react-native": "^13.3.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.0.15",
    "@types/react": "~19.1.10",
    "better-sqlite3": "^11.10.0",
    "dotenv": "^17.2.0",
    "eslint": "^9.39.1",
    "eslint-config-expo": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "~29.7.0",
    "jest-expo": "^54.0.12",
    "lint-staged": "^16.2.6",
    "openai": "^5.12.2",
    "prettier": "^3.6.2",
    "react-test-renderer": "19.1.0",
    "tsx": "^4.19.4",
    "typescript": "~5.9.2",
    "zod-to-json-schema": "^3.24.6"
  },
  "jest": {
    "preset": "jest-expo",
    "setupFiles": [
      "<rootDir>/__tests__/support/jest-platform-setup.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/__tests__/support/jest-setup.ts"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/__tests__/support/*"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native(-community)?)|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|react-navigation|@react-navigation/.*|@sentry/react-native|native-base|react-native-svg|@rn-primitives/.*|@nozbe/watermelondb|better-sqlite3|nativewind|react-native-css-interop)"
    ],
    "moduleNameMapper": {
      "^react-native/Libraries/Utilities/Platform$": "<rootDir>/__mocks__/react-native/Libraries/Utilities/Platform.js",
      "^@react-navigation/native/src/theming/fonts$": "<rootDir>/__mocks__/@react-navigation/native/src/theming/fonts.tsx",
      "^expo-router/testing-library$": "<rootDir>/__mocks__/expo-router/testing-library.ts"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  },
  "private": true
}
